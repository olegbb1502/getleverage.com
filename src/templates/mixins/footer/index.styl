footer
  color $white
  width 100%
  min-height 350px
  padding-top 30px
  padding-bottom 100px
  position relative
  background-color $black

  .header
    text-align center

    img
      width 100px

  .col
    width 25%
    display inline-table

    ul
      list-style none
      li
        color $gray
        line-height 1.75em
        a:hover
          color white

    h5
      margin 15px 0

  .copyright
    color $gray
    width 100%
    font-size 0.9em
    text-align center
    position absolute
    bottom 30px
    p
      display inline-block
    a
      margin 0px 10px
      padding-bottom 2px
      border-bottom 1px solid transparent
      &:hover
        color white
        border-bottom 1px solid $red

@media $tablet

  footer
    text-align center

    .header img
      width 150px

    .col.header
      width 100%
      margin 30px 0 0

    .col
      width 30%
      min-width 150px
      padding 10px 2%


@media $smartphone

  footer
    text-align center

    .header img
      width 150px

    .col
      width 100%
    .copyright p
      display block
