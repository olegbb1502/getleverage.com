#tasks
  text-align center
  padding 60px 30px 30px 30px

  ul
    list-style none
    li
      padding 0
      margin 0
      color $gray
      padding-bottom 5px

  .header
    max-width 850px
    padding 30px 0
    margin 0 auto

  .col
    width 33.3%
    padding 30px
    p
      color $gray
    &.last
      width 45%

@media $smartphone
  #tasks .col
    width 100% !important

@media $tablet
  #tasks
    h2
      font-size 1.75em
    p.large
      font-size 1.15em
    .col
      width 100%
      margin-top 30px
      padding 0px
      &.last
        width 100%
