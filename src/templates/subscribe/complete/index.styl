body.subscribe-complete

  section.complete
    width 75%
    margin 0 auto
    display block
    padding-bottom 60px

    @media $mobile-devices
      width 90%

    .finished
      width 100%
    .logo
      width 175px
      margin-top 30px
      margin-bottom 30px

    h3
      margin-left 0
    p
      margin-left 0
      max-width 500px

    a.button
      background-color $red
      padding 18px 20px 14px 20px
      margin 30px 0 10px 0
      display inline-block
      border-radius 3px
      color white
      font-family $font-display
      min-width 230px
      text-align center

      &:hover
        background-color $lightred

  section.schedule
    background-color #f4f4f4

    .schedule-wrapper
      width 80%
      margin 0 auto

      @media $smartphone
        width 98%

    iframe
      border none
      margin-top 40px
