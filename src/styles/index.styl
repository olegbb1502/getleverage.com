@import './variables.styl'
@import '../templates/**'
@import './ladda.styl'

*, *:after, *:before
  margin 0
  padding 0
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box
html
  font-size 16px
  -ms-text-size-adjust 100%
  -webkit-text-size-adjust 100%

body
  margin 0
  -moz-osx-font-smoothing grayscale
  -webkit-font-smoothing antialiased

  &.no-scroll
    overflow hidden

h1, h2, h3, h4, p, blockquote, figure, ol, ul
  margin 0
  padding 0

li
  display list-item

strong
  font-weight bold

a,
button
  color white
  color inherit
  cursor pointer

a
  text-decoration none
b
  font-weight normal
  font-family $font-display
button
  font inherit
  letter-spacing inherit
  border 0
  overflow visible
  background none
  cursor pointer
  -webkit-font-smoothing inherit
  -webkit-appearance none

::-moz-focus-inner
  padding 0
  border 0

:focus
  outline 0

.invalid
  border 1px solid red

textarea
  resize none

img
    max-width 100%
    height auto
    border 0

// STYLES

body
  text-rendering optimizeLegibility
  -webkit-font-smoothing antialiased
  -moz-font-smoothing antialiased
  font-smoothing antialiased
  -webkit-font-feature-settings "kern"
  -moz-font-feature-settings "kern"
  font-feature-settings "kern"
  font-variant-ligatures common-ligatures
  font-kerning normal
  font-weight normal
  font-family $font-body
  color $black

  a,
  a:focus,
  a:visited
    text-decoration none
    cursor auto

  button
    -webkit-user-select none
    cursor pointer

  p
    font-size 1em
    margin 10px

    &.large
      color $gray
      font-size 1.2em
      font-weight normal
      max-width 675px
      margin 0 auto
    &.caps
      text-transform uppercase
      letter-spacing 1px

  h1, h2, h3, h4, h5, h6
    font-family $font-display
    font-weight normal
    padding 4px 0
    margin 10px

  h1
    font-size 2.5em

  h2
    font-size 2.5em

  h3
    font-size 2.25em

  h4
    font-size 1.5em

  h5
    font-size 1.25em
    padding-bottom 0

  h6
    padding 0
    color $gray
    font-size 0.8em

  section
    width 100%
    padding 30px
    display inline-block

    .col
      width 50%
      display inline-table
      vertical-align top

    .col.third
      width 33.3%

  input
    font-size 1em
    font-family $font-body
    padding 15px
    margin 0 0 0 10px
    outline none
    border 1px solid #eaeaea
    border-radius 3px
    transition 0.2s ease
    &:focus
      border 1px solid $gray

  div.newsletter-success
    align-items center
    display flex
    font-size 1em
    margin 35px 0 0 10px

    span
      font-size 20px

  .checkmark__circle
    stroke-dasharray 166
    stroke-dashoffset 166
    stroke-width 2
    stroke-miterlimit 10
    stroke #ec0606
    fill none
    animation stroke 0.6s cubic-bezier(0.65, 0, 0.45, 1) forwards

  .checkmark
    width 52px
    height 52px
    border-radius 50%
    margin-left 20px
    stroke-width 5
    stroke #fff
    stroke-miterlimit 10
    box-shadow: inset 0px 0px 0px #ec0606
    animation fill .4s ease-in-out .4s forwards, scale .3s ease-in-out .9s both

  .checkmark__check
    transform-origin 50% 50%
    stroke-dasharray 48
    stroke-dashoffset 48
    animation stroke 0.3s cubic-bezier(0.65, 0, 0.45, 1) 0.8s forwards

  @keyframes stroke {
    100% {
      stroke-dashoffset: 0
    }
  }

  @keyframes scale {
    0%, 100% {
      transform: none
    }
    50% {
      transform: scale3d(1.1, 1.1, 1)
    }
  }

  @keyframes fill {
    100% {
      box-shadow: inset 0px 0px 0px 30px #ec0606
    }
  }

  button
    color white
    min-width 150px
    font-size 1em
    font-family $font-display
    padding 19px 10px 14px 10px
    margin 0 10px
    border-radius 3px
    background-color $red
    border none
    min-width 200px
    &:hover
      background-color $lightred

  .video-wrapper
    padding 0 20px
    text-align center

    @media $smartphone
      width 100% !important

    @media $tablet
      margin 20px auto 0
      max-width 650px
      width 100%

    @media $desktop
      display flex
      flex-direction column
      justify-content center
      max-width 480px
      width 40%

  .tagline
    width 40%
    min-width 560px
    max-width 650px
    padding-left 50px
    margin 120px auto 150px

    h2
      font-size 1.1em
      font-family $font-body
      color $gray

    @media $tablet
      margin 0 auto !important
      padding-top 60px
      padding-bottom 90px
      display block
      width 650px

    @media $desktop
      margin-left 0
      margin-right 0

    @media $smartphone
      padding 0 20px
      width 100% !important
      min-width 100% !important

      input
        width 100% !important
        margin-left 0
        margin-top 20px
      button
        margin 0
        width 100%
        margin-top 10px

    img
      margin 0px 15px 10px 15px
      width 200px

    h1
      line-height 1.1em

    p
      color $gray
      max-width 500px
      margin 10px

    input
      margin-top 30px
      width 275px


  span.underline
    border-bottom 4px solid $red

  div.waitlist-button
    margin-top 28px

  ul.terms
    list-style none
    margin 30px 20px 20px 20px
    li
      margin-left 18px
      padding 3px 0px
      display inline-block

      &:before
        content ''
        width 7px
        height 12px
        display inline-block
        margin-right 10px
        border-right 3px solid #000
        border-bottom 3px solid #000
        transform rotate(45deg)

  // Index

body

  .relative
    position relative

  span.error-msg
    display none

  input.invalid + span.error-msg
    position absolute
    display inline-block
    color #f00
    height 10px
    width auto
    bottom -20px
    left 0
    right 0
    text-align center

  .notice
    top 0
    left 0
    right 0
    min-height 40px
    position relative
    background-color #333333
    background-color $darkgray
    color white
    font-family $font-light
    font-size 1.15em
    text-align center
    padding 15px 22px 12px 22px

    a
      text-transform uppercase
      font-size 0.85em
      letter-spacing .05em
      margin-left 10px
      border-bottom 1px solid white

      &:hover
        border-bottom 1px solid $red

      @media $mobile-devices
        display block

  #intro
    min-height 600px
    padding 100px 0 0 0
    display block

    h1
      max-width 500px


    @media $smartphone
      padding-top 50px

    .col:not(:first-of-type)
      min-height 600px
      padding 0

      img
        display block
        margin 0 auto
        margin-top 80px

    @media $desktop
      display flex
      justify-content center
      padding-left 20px
      padding-right 20px

  #virtual
    text-align center
    background-color $lightgray

    p
      padding 10px

    .col
      width 45%

    .header
      text-align center
      padding 80px 0 80px 0

    .learn-more
      text-align center
      padding 80px 0 60px 0

      button
        padding 20px 30px

    p
      color $gray
      max-width 460px
      margin 0 auto

    h3
      padding-top 30px

    .content
      width 100%
      height 100%
      background-image url("/images/124291.jpg")
      background-position bottom right
      background-repeat no-repeat
      background-size 50%

      .col
        padding 160px 40px

  #plan-selected
    display none
    &.show
      display block

  #customers
    width 100%
    position relative
    text-align center
    padding 50px 30px
    height 500px
    @media $mobile-devices
      height 600px

    input
      display none
      -webkit-appearance none

    h4
      color $gray

    h2
      padding 20px 0px 20px 0px

    h5
      color $gray
      margin-bottom 0px

    h6
      margin 0px

    .profile
      position absolute
      left 0
      right 0
      top 200px
      bottom 0
      opacity 0
      visibility hidden
      transition 0.2s
      padding 0px 60px

      .customer
        margin-top 30px
        img, .info
          display inline-table
          vertical-align middle
        .info
          text-align left
          padding-left 20px
          h5
            margin 0

      @media $mobile-devices
        padding 0px
        top 240px
        .customer
          .info
            text-align center
            display block
            margin 0 auto
          img
            display block
            margin 0 auto

      img
        border-radius 99em
        width 100px
        height 100px

      .quote
        padding 0 30px
        max-width 650px
        margin 0 auto
        display block

      .previous,
      .next
        position absolute
        label
          width 30px
          height 30px
          display block
          -webkit-transform rotate(45deg)
          -ms-transform rotate(45deg)
          transform rotate(45deg)
          cursor pointer
        @media $mobile-devices
          display none

      .previous
        left 70px
        top 30px
        label
          border-left 2px solid red
          border-bottom 2px solid red
      .next
        right 70px
        top 30px
        label
          border-top 2px solid red
          border-right 2px solid red

    input#profile-1:checked + .profile
        opacity 1
        visibility visible

    input#profile-2:checked + .profile
        opacity 1
        visibility visible

    input#profile-3:checked + .profile
        opacity 1
        visibility visible

  #featured
    background-color $lightgray
    width 100%
    text-align center
    padding 0
    margin 0

    .logos
      max-width 950px
      padding 60px 0 40px 0
      margin 0 auto

      img
        height 30px
        margin 25px
        opacity 0.65

    .link-wrapper
      display block
      a
        color $red
        font-weight bold
        display inline-block
        padding-bottom 3px
        margin-top 30px
        border-bottom 1px solid transparent
        &:hover
          border-bottom 1px solid $red
          transition 0.2s all

  .errors
    color red
    margin 24px 0

  #signup
    padding 80px 30px
    background-color white
    border-top 2px solid $lightgray

    .col
      width 100%
      max-width 600px
      text-align center
      margin 0 auto
      display block

      p
        color $gray

    form
      margin-top 30px

      input
        width 320px
        @media $mobile-devices
          width 100%
          margin-left 0px
          margin-top 10px

      button
        @media $mobile-devices
          width 100%
          margin 0
          margin-top 10px

