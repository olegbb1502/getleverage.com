{
  "name": "leverage",
  "version": "2.0.0",
  "description": "website for getlevereage.com",
  "main": "index.js",
  "dependencies": {
    "aws-sdk": "^2.7.2",
    "body": "^5.1.0",
    "class-list": "^0.1.1",
    "debug": "^2.6.9",
    "dom-events": "^0.1.1",
    "domready": "^1.0.8",
    "form-serialize": "^0.7.1",
    "js-cookie": "^2.2.0",
    "ladda": "^1.0.0",
    "rc": "^1.1.6",
    "send": "^0.14.1",
    "send-promised": "^1.2.0",
    "xhr": "^2.2.2",
    "xtend": "^4.0.1"
  },
  "private": true,
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "browserify": "^13.1.0",
    "http-server": "^0.9.0",
    "jade": "^1.11.0",
    "mkdirp": "^0.5.1",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "stylus": "^0.54.5",
    "tape": "^4.6.2",
    "watchify": "^3.7.0",
    "webpack": "^3.8.1"
  },
  "scripts": {
    "watch": "npm run watch:stylus & npm run watch:templates & webpack -w & ./bin/server",
    "watch:stylus": "stylus --watch ./src/**/*.styl -o ./static/css",
    "watch:templates": "pug -O env.js --watch ./src/templates -o ./static",
    "build": "rm -rf static/ && npm run build:affiliates && npm run build:templates && npm run build:stylus && npm run build:assets && webpack",
    "build:affiliates": "./bin/gen_affiliates",
    "build:stylus": "mkdir -p static/css && stylus ./src/**/*.styl -o ./static/css",
    "build:templates": "mkdir -p static && pug -O env.js ./src/templates -o ./static",
    "build:assets": "cp -R src/images static && cp -R src/fonts static",
    "publish:dev": "env NODE_ENV=development ./bin/deploy",
    "publish:staging": "env NODE_ENV=staging ./bin/deploy",
    "publish:production": "env NODE_ENV=production ./bin/deploy",
    "test": "standard"
  }
}
